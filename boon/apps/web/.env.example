# =============================================================================
# Boon Web Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# Application Configuration
APP_NAME=Boon Fashion Management
APP_VERSION=2.0.0
APP_DESCRIPTION=Multi-tenant fashion product management system
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3333
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Authentication Configuration
JWT_STORAGE_KEY=boon_auth_token
REFRESH_TOKEN_STORAGE_KEY=boon_refresh_token
TOKEN_REFRESH_THRESHOLD=300000
AUTO_LOGOUT_TIMEOUT=3600000

# Application Features
ENABLE_DEBUG=true
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_OFFLINE_MODE=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf,text/csv
MAX_CONCURRENT_UPLOADS=5

# Image Processing
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
THUMBNAIL_SIZE=200
THUMBNAIL_QUALITY=70

# UI Configuration
DEFAULT_THEME=light
THEME_STORAGE_KEY=boon_theme
LANGUAGE=en
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=24h

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# Pagination Defaults
DEFAULT_PAGINATION_SIZE=20
DEFAULT_PAGINATION_SIZES=[10, 20, 50, 100]

# Form Configuration
DEBOUNCE_TIME=300
AUTO_SAVE_INTERVAL=30000
MAX_FORM_FIELDS=100

# Table Configuration
DEFAULT_SORT_FIELD=createdAt
DEFAULT_SORT_DIRECTION=desc
VIRTUAL_SCROLL_THRESHOLD=1000

# Search Configuration
SEARCH_DEBOUNCE=500
MIN_SEARCH_LENGTH=2
MAX_SEARCH_RESULTS=50

# Chart Configuration
CHART_DEFAULT_TYPE=bar
CHART_ANIMATION_DURATION=750
CHART_COLORS_PRIMARY=#3B82F6
CHART_COLORS_SECONDARY=#10B981
CHART_COLORS_WARNING=#F59E0B
CHART_COLORS_DANGER=#EF4444

# Modal Configuration
DEFAULT_MODAL_WIDTH=600px
DEFAULT_MODAL_HEIGHT=auto
MODAL_BACKDROP=true
MODAL_KEYBOARD=true

# Notification Configuration
NOTIFICATION_DURATION=5000
NOTIFICATION_POSITION=top-right
NOTIFICATION_MAX_COUNT=5

# Export Configuration
EXPORT_BATCH_SIZE=1000
EXPORT_TIMEOUT=60000
SUPPORTED_EXPORT_FORMATS=csv,xlsx,pdf

# Print Configuration
PRINT_HEADER_ENABLED=true
PRINT_FOOTER_ENABLED=true
PRINT_PAGE_NUMBERS=true

# Accessibility
ENABLE_HIGH_CONTRAST_MODE=false
ENABLE_REDUCED_MOTION=false
FONT_SIZE_MULTIPLIER=1.0

# Development Configuration
HOT_RELOAD_ENABLED=true
SOURCE_MAP_ENABLED=true
LIVE_RELOAD_PORT=49153
BROWSER_TARGET=chrome

# Performance Monitoring
ENABLE_PERFORMANCE_MARKS=false
ENABLE_USER_TIMING=false
PERFORMANCE_SAMPLE_RATE=0.1

# Error Handling
ENABLE_ERROR_DIALOG=true
ENABLE_ERROR_LOGGING=true
ERROR_LOG_LEVEL=error
MAX_ERROR_STACK_LENGTH=1000

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ADVANCED_SEARCH=false
ENABLE_BULK_OPERATIONS=true

# Security
ENABLE_CONTENT_SECURITY_POLICY=false
CROSS_SITE_REQUEST_FORGERY_PROTECTION=false
X_FRAME_OPTIONS=SAMEORIGIN

# External Services (optional)
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=
# INTERCOM_APP_ID=

# Production Overrides (uncomment for production)
# NODE_ENV=production
# ENABLE_DEBUG=false
# ENABLE_ANALYTICS=true
# ENABLE_ERROR_REPORTING=true
# HOT_RELOAD_ENABLED=false
# SOURCE_MAP_ENABLED=false
# LOG_LEVEL=warn