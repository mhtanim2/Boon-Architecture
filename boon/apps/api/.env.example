# =============================================================================
# Boon API Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=3333
HOST=localhost

# Database Configuration (MySQL 8.0+)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=boon_user
DB_PASSWORD=secure_password
DB_DATABASE=boon_dev
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d
MAGIC_LINK_SECRET=your-magic-link-secret-min-32-chars
MAGIC_LINK_EXPIRES_IN=900

# Encryption
ENCRYPTION_KEY=your-encryption-key-min-32-chars-aes-256

# Email Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@boon.dev
SMTP_FROM_NAME=Boon Fashion Management

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf,text/csv

# Redis Configuration (optional - for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
SEQ_URL=http://localhost:5341
SEQ_API_KEY=
LOG_PRETTY=true

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# API Configuration
API_PREFIX=api
API_VERSION=v2
GLOBAL_PREFIX=api

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true
SWAGGER_PATH=api
SWAGGER_TITLE=Boon Fashion Management API
SWAGGER_DESCRIPTION=Multi-tenant fashion product management system
SWAGGER_VERSION=2.0.0

# Multi-Tenancy Configuration
TENANT_HEADER=X-Tenant-Slug
DEFAULT_TENANT=default

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# External Services (optional)
# ELASTICSEARCH_URL=http://localhost:9200
# SENTRY_DSN=
# ANALYTICS_ID=

# Development Only Features
DEBUG_MODE=true
ENABLE_PROFILING=false
ENABLE_QUERY_LOGGING=true
ENABLE_MOCK_DATA=false

# Production Overrides (uncomment for production)
# NODE_ENV=production
# DB_LOGGING=false
# LOG_PRETTY=false
# DEBUG_MODE=false
# ENABLE_PROFILING=false
# SWAGGER_ENABLED=false