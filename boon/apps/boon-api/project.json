{
  "name": "boon-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/boon-api/src",
  "projectType": "application",
  "targets": {
    "release": {
      "command": "cp -rv ./apps/boon-api/.env ./dist/apps/boon-api/.env && npx pm2 restart boon-api"
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/boon-api",
        "main": "apps/boon-api/src/main.ts",
        "tsConfig": "apps/boon-api/tsconfig.app.json",
        "assets": ["apps/boon-api/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/boon-api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "boon-api:build",
        "inspect": true,
        "port": 9000
      },
      "configurations": {
        "development": {
          "buildTarget": "boon-api:build:development"
        },
        "production": {
          "buildTarget": "boon-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/boon-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/boon-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
